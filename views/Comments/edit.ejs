<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1>Edit Comment</h1>
        <div>
            <form action="/blog/<%= blogpost_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div>
                    <input type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div>
                    <button>Submit!</button>
                </div>
            </form>
            <a href="/blog">Go Back</a>
        </div>
    </div>
</div>
